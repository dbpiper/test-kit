{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "types": ["jest", "node", "@testing-library/jest-dom"]
    },
    "include": ["src", "tests"],
    "exclude": ["dist", "node_modules"]
}
