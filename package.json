{
    "name": "@suerg/test-kit",
    "version": "0.1.24",
    "private": false,
    "type": "module",
    "react-native": "dist/index.native.cjs",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dbpiper/test-kit.git"
    },
    "homepage": "https://github.com/dbpiper/test-kit#readme",
    "bugs": {
        "url": "https://github.com/dbpiper/test-kit/issues"
    },
    "exports": {
        ".": {
            "react-native": {
                "types": "./dist/index.native.d.ts",
                "import": "./dist/index.native.mjs",
                "require": "./dist/index.native.cjs"
            },
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "sideEffects": false,
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "unbuild && node --enable-source-maps scripts/postbuild.mjs",
        "prepack": "npm run build",
        "build:yalc": "npm run build && npx yalc publish",
        "dev:yalc": "nodemon -w src -e ts,tsx,js,jsx -d 700ms -x \"npm run build:yalc\"",
        "test": "headlamp",
        "test:coverage": "headlamp --coverage",
        "test:dev": "headlamp --changed=branch --coverage --onlyFailures",
        "lint": "eslint .",
        "lint:errors": "eslint . --quiet",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "release": "npm publish --access public",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "@reduxjs/toolkit": ">=1.9.0",
        "@testing-library/react": ">=14.0.0",
        "@testing-library/react-native": ">=12.0.0",
        "@testing-library/user-event": ">=13.0.0",
        "@types/jest": ">=29",
        "@types/react": ">=18",
        "axios": ">=1.6.0",
        "react": ">=17 <20",
        "react-dom": ">=17 <20",
        "react-redux": ">=8.0.0",
        "redux": ">=4 <6"
    },
    "peerDependenciesMeta": {
        "@testing-library/react": {
            "optional": true
        },
        "@testing-library/user-event": {
            "optional": true
        },
        "react-dom": {
            "optional": true
        },
        "@testing-library/react-native": {
            "optional": true
        },
        "@types/jest": {
            "optional": true
        }
    },
    "dependencies": {
        "deepmerge": "^4.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.28.0",
        "@babel/preset-typescript": "^7.27.1",
        "@react-native/babel-preset": "^0.80.2",
        "@reduxjs/toolkit": "^2.8.2",
        "@testing-library/jest-dom": "^6.6.4",
        "@testing-library/react": "^16.3.0",
        "@testing-library/react-native": "^12.9.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^30.0.0",
        "@types/react": "^19.1.9",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "axios": "^1.6.0",
        "babel-jest": "^30.0.5",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.0",
        "eslint-import-resolver-node": "^0.3.9",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "headlamp": "^0.1.30",
        "jest": "^30.0.5",
        "jest-environment-jsdom": "^30.0.5",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-native": "^0.80.2",
        "react-redux": "^9.2.0",
        "react-test-renderer": "^19.1.1",
        "redux": "^5.0.1",
        "ts-jest": "^29.4.1",
        "typescript": "^5.9.2",
        "unbuild": "^2.0.0",
        "yalc": "^1.0.0-pre.53"
    }
}
